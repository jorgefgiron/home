#!/bin/bash
#
# ~/.bashrc
#

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

# Source /etc/profile
source /etc/profile

# Source .profile
if [ -f ~/.profile ]; then
	source ~/.profile
fi

# Source the bash-specific rc
if [ -f ~/.bin/bashrc.sh ]; then
	source ~/.bin/bashrc.sh
fi
