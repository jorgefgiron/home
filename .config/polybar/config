[module/date]
type = internal/date

format-underline = ${res/colors.underline-date}
format-prefix = " "
format-prefix-foreground = ${self.format-underline}

date = %a
time = %I:%M %p
date-alt = %A, %B %d
time-alt = %I:%M %p

label = %date% %time%

interval = 30

[module/date-mini]
type = internal/date
format-underline = ${res/colors.underline-date}

time = %I:%M %p
date-alt = "%A, %B %d "
time-alt = %I:%M %p

label= %date%%time%

interval = 60

[module/memory-label]
