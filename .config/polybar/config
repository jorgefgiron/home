# BARS
#====================
[bar/alpha]
inherit = template/bar
bottom = true
tray-position = right

border-top-size = 2
border-top-color = ${res/colors.background-2}

modules-left = i3 bspwm | wlan-network eth-network | mpd
modules-center = xwindow-label
modules-right = temperature-label cpu-label memory-label | xbacklight-ramp volume-ramp battery-ramp | date

[bar/gamma]
inherit = template/bar
bottom = true
tray-position = right

background = #001d2021

modules-left = i3 bspwm | 
modules-center = xwindow-label
modules-right = | temperature-label-alert mpd-mini wlan-network-mini volume-ramp-mini battery-ramp-mini | date-mini

